{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "max-nesting-depth": [
      3,
      {
        "ignoreAtRules": [
          "each",
          "media",
          "supports",
          "include"
        ]
      }
    ],
    "selector-max-compound-selectors": [ 5 ],
    "order/properties-alphabetical-order": false
  }
}
